<?xml version="1.0" encoding="utf-8"?>
<!-- 버튼 배경 drawable 정의 -->
<!-- Button background drawable definition -->

<!-- shape: 도형을 정의 (여기서는 둥근 사각형) -->
<!-- shape: defines the shape (rounded rectangle in this case) -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- corners: 모서리를 둥글게 만듦. radius는 둥근 정도를 설정 (8dp = 약간 둥근 모서리) -->
    <!-- corners: makes the corners rounded. radius sets the roundness (8dp = slightly rounded corners) -->
    <corners android:radius="8dp" />

    <!-- solid: 도형의 채우기 색상 (반투명 흰색) -->
    <!-- solid: the fill color of the shape (semi-transparent white) -->
    <solid android:color="@color/button_background" />

    <!-- stroke: 테두리 설정. width는 두께, color는 색상 -->
    <!-- stroke: border settings. width is thickness, color is the border color -->
    <stroke
        android:width="1dp"
        android:color="@color/white" />

</shape>
